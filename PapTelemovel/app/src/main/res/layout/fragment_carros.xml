<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carros">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000"
        tools:context=".Pagamentos">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/tableLayoutCarros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Cabeçalho da tabela -->
                <LinearLayout
                    android:id="@+id/tabela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CFD3D6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Matricula"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Marca"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Linhas da tabela (serão adicionadas dinamicamente) -->

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnAdicionarCarro"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#03A9F4"
            android:text="+"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRemoverCarro"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FF0000"
            android:text="-"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/btnAdicionarCarro"
            app:layout_constraintEnd_toStartOf="@+id/btnAdicionarCarro" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>